{% extends 'base.html.twig' %}

{% block title %} {{ institution.name }} | {{ parent() }} {% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <a href="{{ url('institutionedit' , {'slug': institution.slug}) }}"><strong>Edit</strong></a>
            <a href="{{ url('institutiondelete' , {'slug': institution.slug}) }}"><strong>Delete</strong></a>
            <div id="welcome">
                <h1>Institution</h1>
                <p>{{ institution.id }}</p>
                <p><strong><u>{{ institution.name }}</u></strong></p>
                <p>{{ institution.address }}</p>
                <p>{{ institution.contact }}</p>
                <p>{{ institution.email }}</p>
                <p>{{ institution.logo }}</p>
            </div>
            <div class="members">
                <h3>{{ institution.members|length }}
                {% if institution.members|length == 1 %}
                    member
                {% else %}
                    members
                {% endif %}</h3>
                <p>{% for member in institution.members %}
                <a href="{{ path('membershow', {'id': member.id}) }}">{{ member.username }}</a>,
                {% endfor %}</p>
            </div>
            <div class="collaborations">
                <h3>Associated with {{ institution.collaborating|length }}
                {% if institution.collaborating|length == 1 %}
                    event
                {% else %}
                    events
                {% endif %}</h3>
                <p>{% for collaboration in institution.collaborating %}
                <a href="{{ path('eventshow', {'slug': collaboration.slug}) }}">{{ collaboration.title }}</a>,
                {% else %}
                no collaborations yet!
                {% endfor %}</p>
            </div>
            <div class="finances">
                <h3>{{ institution.finances|length }}
                {% if institution.finances|length == 1 %}
                    financial transaction
                {% else %}
                    financial transactions
                {% endif %}</h3>
                <p>{% for finance in institution.finances %}
                    {{ finance.date|date('M d, Y') }} - <a href="{{ path('financeshow', {'id': finance.id}) }}">{{ finance.billNumber }}</a> - {{ finance.event.title }} - {{ finance.receiver.username }} - {{ finance.direction }} - {{ finance.amount }} - {{ finance.remarks }}<br>
                {% endfor %}</p>
            </div>
            <div class="stalls">
                <h3>{{ institution.stalls|length }}
                {% if institution.stalls|length == 1 %}
                    stall
                {% else %}
                    stalls
                {% endif %}</h3>
                <p>{% for stall in institution.stalls %}
                    <a href="{{ path('stallshow', {'id': stall.id}) }}">{{ stall.number }}</a>,
                {% endfor %}</p>
            </div>
        </div>
    </div>
{% endblock %}
