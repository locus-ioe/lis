{% extends 'base.html.twig' %}

{% block title %} Advisors | {{ parent() }} {% endblock %}

{% block body %}
  {{ parent() }}
  <div id="wrapper">
    <div id="container">
      <div id="welcome">
        <h1><span>Advisors {{ advisors|length }}</span></h1>
        <h4><a href="{{ url('advisorcreate') }}"><small>ÔÅß Add</small></a></h1>
      </div>
      <table>
        <tr id="header">
          <td>ID</a></td>
          <td>Name</a></td>
          <td>Post</a></td>
          <td>Institution</a></td>
          <td>Year</a></td>
        </tr>
        {% for advisor in advisors %}
          <tr id="data">
            <td>{{ advisor.id }}</a></td>
            <td><a href="{{ url('advisorshow' , {'id': advisor.id}) }}"><strong>{{ advisor.member.firstname }} {{ advisor.member.lastname}}</strong></a></td>
            <td>{{ advisor.post }}</td>
            <td>{{ advisor.member.institution.name }}</td>
            <td>{{ advisor.year|date('Y') }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
{% endblock %}
