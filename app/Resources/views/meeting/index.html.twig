{% extends 'base.html.twig' %}

{% block title %} Meetings | {{ parent() }} {% endblock %}

{% block body %}
  {{ parent() }}
  <div id="wrapper">
    <div id="container">
      <div id="welcome">
        <h1><span>Meetings {{ meetings|length }}</span></h1>
        <h4><a href="{{ url('meetingcreate') }}"><small>ÔÅß Add</small></a></h1>
      </div>
      <table>
        <tr id="header">
          <td>ID</a></td>
          <td>Datetime</a></td>
          <td>Venue</a></td>
          <td>Agenda</a></td>
          <td>Minute</a></td>
        </tr>
        {% for meeting in meetings %}
          <tr id="data">
            <td>{{ meeting.id }}</a></td>
            <td><a href="{{ url('meetingshow' , {'slug': meeting.slug}) }}"><strong>{{ meeting.datetime|date('M d, Y H:i') }}</strong></a></td>
            <td>{{ meeting.venue }}</a></td>
            <td>{{ meeting.agenda }}</a></td>
            <td>{{ meeting.minute }}</a></td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
{% endblock %}
