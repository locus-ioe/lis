{% extends 'base.html.twig' %}

{% block title %} Committees | {{ parent() }} {% endblock %}

{% block body %}
  {{ parent() }}
  <div id="wrapper">
    <div id="container">
      <div id="welcome">
        <h1><span>Advisors</h1>
        <a href="{{ url('committeecreate') }}">Create</a>
      </div>
      <table>
        <tr id="header">
          <td>ID</a></td>
          <td>Name</a></td>
          <td>Post</a></td>
          <td>Institution</a></td>
          <td>Year</a></td>
        </tr>
        {% for committee in committees %}
          <tr id="data">
            <td>{{ committee.id }}</a></td>
            <td><a href="{{ url('committeeshow' , {'id': committee.id}) }}"><strong>{{ committee.member.firstname }} {{ committee.member.lastname}}</strong></a></td>
            <td>{{ committee.post }}</td>
            <td>{{ committee.member.institution.name }}</td>
            <td>{{ committee.year|date('Y') }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
{% endblock %}
