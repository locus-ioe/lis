{% extends 'base.html.twig' %}

{% block title %} {{ privilege.name }} | {{ parent() }} {% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <a href="{{ url('privilegeedit' , {'slug': privilege.slug}) }}"><strong>Edit</strong></a>
            <a href="{{ url('privilegedelete' , {'slug': privilege.slug}) }}"><strong>Delete</strong></a>
            <div id="welcome">
                <h1>Privilege</h1>
                <p>{{ privilege.id }}</p>
                <p><strong><u>{{ privilege.name }}</u></strong></p>
            </div>
            <div class="members">
                <h3>{{ privilege.members|length }}
                {% if privilege.members|length == 1 %}
                    member
                {% else %}
                    members
                {% endif %}</h3>
                <p>{% for member in privilege.members %}
                {{ member.username }}
                {% endfor %}</p>
            </div>
        </div>
    </div>
{% endblock %}
